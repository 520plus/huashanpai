<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springsecurity.mapper.UserMapper">
    <select id="selectUser" parameterType="com.example.springsecurity.pojo.User">
        select * from User where User.username=#{username} and User.password=#{password};
    </select>
</mapper>